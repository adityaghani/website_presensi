<body>
  <div class="container">
    <h2 class="text-center mb-4 fw-bold">üìã Data Presensi Mahasiswa</h2>
    <div class="text-center mb-3">
      <a href="index.php" class="btn-back">‚Üê Kembali ke Form</a>
    </div>

    <?php if (isset($_GET['success'])): ?>
      <div class="alert alert-success text-center">‚úÖ Data presensi berhasil disimpan!</div>
    <?php endif; ?>

    <div class="table-responsive">
      <table class="table table-bordered text-dark text-center align-middle">
        <thead class="table-primary">
          <tr>
            <th>No</th>
            <th>Tanggal</th>
            <th>Nama</th>
            <th>NIM</th>
            <th>Keterangan</th>
          </tr>
        </thead>
        <tbody>
          <?php if (empty($data)): ?>
            <tr><td colspan="5" class="text-center">Belum ada data presensi.</td></tr>
          <?php else: ?>
            <?php $no = 1; foreach ($data as $baris): 
              list($tanggal, $nama, $nim, $keterangan) = explode(" | ", $baris);
            ?>
              <tr>
                <td><?= $no++ ?></td>
                <td><?= htmlspecialchars($tanggal) ?></td>
                <td><?= htmlspecialchars($nama) ?></td>
                <td><?= htmlspecialchars($nim) ?></td>
                <td>
                  <?php if ($keterangan === "Hadir"): ?>
                    <span class="badge bg-success">Hadir</span>
                  <?php elseif ($keterangan === "Izin"): ?>
                    <span class="badge bg-warning text-dark">Izin</span>
                  <?php else: ?>
                    <span class="badge bg-danger">Alpa</span>
                  <?php endif; ?>
                </td>
              </tr>
            <?php endforeach; ?>
          <?php endif; ?>
        </tbody>
      </table>
    </div>
  </div>
