          <tbody>
            <?php if (empty($data)): ?>
              <tr>
                <td colspan="5" class="py-3">Belum ada data presensi.</td>
              </tr>
            <?php else: ?>
              <?php $no = 1; foreach ($data as $baris): 
                list($tanggal, $nama, $nim, $keterangan) = explode(" | ", $baris);
              ?>
                <tr>
                  <td><?= $no++ ?></td>
                  <td><?= htmlspecialchars($tanggal) ?></td>
                  <td><?= htmlspecialchars($nama) ?></td>
                  <td><?= htmlspecialchars($nim) ?></td>
                  <td>
                    <?php if ($keterangan === "Hadir"): ?>
                      <span class="badge bg-success">Hadir</span>
                    <?php elseif ($keterangan === "Izin"): ?>
                      <span class="badge bg-warning text-dark">Izin</span>
                    <?php else: ?>
                      <span class="badge bg-danger">Alpa</span>
                    <?php endif; ?>
                  </td>
                </tr>
              <?php endforeach; ?>
            <?php endif; ?>
